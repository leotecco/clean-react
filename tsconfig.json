{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDirs": ["src"],
    "baseUrl": "src",
    "paths": {
      "@/data/*": ["data/*"],
      "@/domain/*": ["domain/*"],
      "@/infra/*": ["infra/*"],
    },
    "allowJs": true,
    "esModuleInterop": true,
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}
